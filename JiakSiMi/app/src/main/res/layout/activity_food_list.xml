<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android = "http://schemas.android.com/apk/res/android"
    xmlns:app = "http://schemas.android.com/apk/res-auto"
    xmlns:tools = "http://schemas.android.com/tools"
    android:layout_width = "match_parent"
    android:layout_height = "match_parent"
    tools:context = ".FoodList" >>

    <TextView
        android:id = "@+id/foodListTitleTextView"
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:layout_marginStart = "8dp"
        android:layout_marginTop = "8dp"
        android:text = "@string/food_list_title"
        android:textSize = "30sp"
        android:textStyle = "bold"
        app:layout_constraintStart_toStartOf = "parent"
        app:layout_constraintTop_toTopOf = "parent" />

    <TextView
        android:id = "@+id/addTextView"
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:layout_marginEnd = "8dp"
        android:text = "Add Dish >"
        android:textSize = "18sp"
        app:layout_constraintBaseline_toBaselineOf = "@+id/foodListTitleTextView"
        app:layout_constraintEnd_toEndOf = "parent" />

    <View
        android:id = "@+id/divider"
        android:layout_width = "match_parent"
        android:layout_height = "2dp"
        android:layout_marginStart = "8dp"
        android:layout_marginEnd = "8dp"
        android:background = "@android:color/darker_gray"
        app:layout_constraintEnd_toEndOf = "parent"
        app:layout_constraintHorizontal_bias = "0.0"
        app:layout_constraintStart_toStartOf = "parent"
        app:layout_constraintTop_toBottomOf = "@+id/foodListTitleTextView" />

    <androidx.recyclerview.widget.RecyclerView
        android:id = "@+id/foodRecyclerView"
        android:layout_width = "0dp"
        android:layout_height = "0dp"
        android:layout_marginStart = "8dp"
        android:layout_marginTop = "8dp"
        android:layout_marginEnd = "8dp"
        android:layout_marginBottom = "8dp"
        app:layout_constraintBottom_toTopOf = "@+id/tabLayout"
        app:layout_constraintEnd_toEndOf = "parent"
        app:layout_constraintStart_toStartOf = "parent"
        app:layout_constraintTop_toBottomOf = "@+id/divider" />

    <com.google.android.material.tabs.TabLayout
        android:id = "@+id/tabLayout"
        android:layout_width = "0dp"
        android:layout_height = "wrap_content"
        android:background = "#FCD5D5"
        android:verticalScrollbarPosition = "defaultPosition"
        app:layout_constraintBottom_toBottomOf = "parent"
        app:layout_constraintEnd_toEndOf = "parent"
        app:layout_constraintStart_toStartOf = "parent"
        app:tabIndicatorColor = "#FF7272"
        app:tabIndicatorGravity = "top"
        app:tabPaddingEnd = "8dp"
        app:tabPaddingStart = "8dp"
        app:tabSelectedTextColor = "#3C3C3C"
        app:tabTextColor = "#6C6C6C" >

        <com.google.android.material.tabs.TabItem
            android:id = "@+id/mealTab"
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:text = "@string/food_tab_1" />

        <com.google.android.material.tabs.TabItem
            android:id = "@+id/meatTab"
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:text = "@string/food_tab_2" />

        <com.google.android.material.tabs.TabItem
            android:id = "@+id/vegTab"
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:text = "@string/food_tab_3" />

        <com.google.android.material.tabs.TabItem
            android:id = "@+id/soupTab"
            android:layout_width = "wrap_content"
            android:layout_height = "wrap_content"
            android:text = "@string/food_tab_4" />
    </com.google.android.material.tabs.TabLayout >

</androidx.constraintlayout.widget.ConstraintLayout >